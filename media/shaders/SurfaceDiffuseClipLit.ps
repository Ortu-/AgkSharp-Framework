uniform sampler2D texDiffuse; //0

varying mediump vec3 lightVarying;
varying mediump vec2 uvVarying;

uniform mediump vec3 dirLightAmbient;

void main()
{
	if (texture2D(texDiffuse, uvVarying).a < 0.5) discard;
	mediump vec3 texColor = texture2D(texDiffuse, uvVarying).rgb;
	gl_FragColor = vec4((dirLightAmbient + lightVarying) * texColor, 1.0);
}